# Font size in points for the terminal text
font-size = 12

# Automatically switch theme based on macOS light/dark appearance
theme = light:night-owl-light,dark:night-owl-dark

# Force a specific dark theme (currently disabled)
# theme = night-owl-dark

# Treat the macOS Option key as Alt for keybindings and terminal sequences
macos-option-as-alt = true

# Map Option+Backspace to Ctrl+W (delete word backward), matching standard terminal behavior
keybind = opt+backspace=text:\x17

# Hide the native macOS titlebar for a cleaner window look
macos-titlebar-style = hidden

# Automatically copy selected text to the system clipboard
copy-on-select = clipboard

# Window Configs
# ---------------------------------------------------
# Show window decorations (title bar, borders)
window-decoration = true
# Horizontal padding (in pixels) between the terminal content and window edge
window-padding-x = 5
# Vertical padding (in pixels) between the terminal content and window edge
window-padding-y = 5
# Balance padding evenly on both sides when the grid doesn't fill the window exactly
window-padding-balance = true
